{
    "cosmos-installer": {
      "form": {
          "name": "mountPoint",
          "label": "To which local server folder do you want to deploy?",
          "initialValue": "/opt/docker/appdata/{ServiceName}",
          "type": "text"
        },
        "post-install": [{
            "type": "warning",
            "label": "After installation - please change the default Admin Account: admin/admin123 "
        }]
    },
    "minVersion": "0.8.0",
    "services": {
        "{ServiceName}": {
            "image": "filegator/filegator:latest",
            "container_name": "{ServiceName}",
            "labels": {
                "cosmos-persistent-env": "",
                "cosmos-force-network-secured": "true",
                "cosmos-auto-update": "true",
                "cosmos-icon": "https://the-head.github.io/cosmos-servapps/servapps/FileGator/icon.png"
            },
            "volumes": [{
                "source": "{Context.mountPoint}/repository",
                "target": "/var/www/filegator/repository",
                "type": "bind"
            },
            {
                "source": "{Context.mountPoint}/private",
                "target": "/var/www/filegator/private",
                "type": "bind"
            },
            {
                "Source": "{Context.mountPoint}/conf/configuration.php",
                "Target": "/var/www/filegator/configuration.php",
                "type": "bind"
            }],
            "routes": [{
                "name": "{ServiceName}",
                "description": "Expose {ServiceName} to the web",
                "useHost": true,
                "target": "http://{ServiceName}:8080",
                "mode": "SERVAPP",
                "Timeout": 14400000,
                "ThrottlePerMinute": 12000,
                "BlockCommonBots": true,
                "SmartShield": {
                    "Enabled": true
                }
            }],
            "restart": "unless-stopped"
        }
    }
}
